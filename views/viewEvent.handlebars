<div class="container">
<div class="flex justify-content-center align-items-center text-white bg-dark" style="max-width: 540px;">
    <div class="row no-gutters ">
        <div class="col-md-4">
      <img src="/images/dj.png" class="card-img-top" alt="dj">
    </div>
    <div class="col-md-8">
      <div class="card-body flex-wrap">
        <h3>{{name}} Event Name</h3>
        <p>{{description}} Event Description</p>
        <p>{{ starting_date }} Start Date / End Date {{ ending_date }}</p>
        <p>{{created_by}} Created By</p>
    </div>
     </div>
    </div>
    <div class="text-white flex-wrap">
        <h2 class="col">Search Tracks</h2>
        <label for="track">Search</label>
        <input class= "text-white" type="text" id="track-q">
        <label for="track">Type</label>
        <input class= "text-white"type="text" id="track-type">
        <label for="track">Limit</label>
        <input  class= "text-white"type="text" id="track-limit">
        <button class="btn btn-primary" id="search">Search</button>
    </div>
    </div>
    <div class="text-white col-lg-8">
        <h2 class="p-5">Songs</h2>
        </div>
        <div class="container">
        <table class="table table-bordered table-hover table-dark text-white">
            <thead>
                <tr>
                    <th scope="col">Song Name</th>
                    <th scope="col">Artist</th>
                    <th scope="col">Album</th>
                    <th scope="col">Photo</th>
                    <th scope="col">Preview</th>
                    <th scope="col">Add Song</th>
                </tr>
            </thead>
            <tbody scope= "row" id="songs-table-body">
            </tbody>
        </table>
    </div>
</div>

<script src="/js/searchTracks.js"></script>
